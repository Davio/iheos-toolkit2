<?xml version="1.0" encoding="UTF-8"?>
<TestPlan>
	<!-- Data for this test is loaded by xxxx -->
	<Test>rig-2001/SectionOne</Test>
	<TestStep id="retrieve">
		<Goal>Imaging Document Set Retrieve of a single image</Goal>
		<ExpectedStatus>Success</ExpectedStatus>
		<ImagingDocSetRigRetrieveTransaction>
			<MetadataFile>query.xml</MetadataFile>
		</ImagingDocSetRigRetrieveTransaction>
	</TestStep>
	<TestStep id="validate">
		<Goal>Validate RAD-75 Response and retrieved image</Goal>
		<Standard>
			<ResponseBody>
				<xdsb:RetrieveDocumentSetResponse
					xmlns:xdsb="urn:ihe:iti:xds-b:2007">
					<rs:RegistryResponse
						status="urn:oasis:names:tc:ebxml-regrep:ResponseStatusType:Success"
						xmlns:rs="urn:oasis:names:tc:ebxml-regrep:xsd:rs:3.0" />
					<xdsb:DocumentResponse>
						<xdsb:HomeCommunityId>urn:oid:1.3.6.1.4.1.21367.13.70.201</xdsb:HomeCommunityId>
						<xdsb:RepositoryUniqueId>1.3.6.1.4.1.21367.13.71.201.1</xdsb:RepositoryUniqueId>
						<xdsb:DocumentUniqueId>1.3.6.1.4.1.21367.201599.3.201606021454003.1</xdsb:DocumentUniqueId>
						<xdsb:mimeType>application/dicom</xdsb:mimeType>
						<xdsb:Document>...</xdsb:Document>
					</xdsb:DocumentResponse>
				</xdsb:RetrieveDocumentSetResponse>
			</ResponseBody>
		</Standard>
		<ImgDetailTransaction>
			<Assertions>
				<Assert id="Returned doc(s)" process="sameRetImgs"/>
				<Assert id="Returned img(s)" process="sameDcmImgs">
					<TagList>
						<SOPClassUID />
						<SOPInstanceUID />
						<PatientID />
						<PatientBirthDate />
						<PatientSex />
						<StudyInstanceUID />
						<SeriesInstanceUID />
						<Tag hex="0020,0020"/>
					</TagList>
					<DirList>
						<StdDir>../../stdImgs/rig-2001</StdDir>
					</DirList>
				</Assert>
			</Assertions>

		</ImgDetailTransaction>

	</TestStep>
</TestPlan>
